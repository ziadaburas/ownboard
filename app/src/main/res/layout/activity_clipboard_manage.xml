<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="إدارة الحافظة"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="بحث..."
            android:textColorHint="#888888"
            android:textColor="#FFFFFF"
            android:background="#2C2C2C"
            android:padding="10dp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="10dp"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/btn_filter_date"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_menu_my_calendar"
            android:background="#2C2C2C"
            android:contentDescription="فلترة بالتاريخ"
            android:tint="#FFFFFF"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_case_sensitive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مطابقة حالة الأحرف (Case Sensitive)"
        android:textColor="#CCCCCC"
        android:layout_marginBottom="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_clipboard_manage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
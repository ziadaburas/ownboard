<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:elevation="4dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/btn_delete_key"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_menu_delete"
        android:tint="#F44336"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp"/>

    <ImageView
        android:id="@+id/btn_edit_key"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_menu_edit"
        android:tint="#2196F3"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp"/>

    <ImageView
        android:id="@+id/btn_move_key"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_menu_sort_by_size"
        android:tint="#757575"
        android:layout_marginStart="8dp"
        android:padding="4dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/txt_key_label"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="A"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="#2196F3" 
            android:layout_marginBottom="4dp"/>
            
        <TextView
            android:id="@+id/txt_key_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All :النوع"
            android:textSize="12sp"
            android:textColor="#666666"/>
            
        <TextView
            android:id="@+id/txt_key_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0 :الوزن"
            android:textSize="12sp"
            android:textColor="#666666"/>
    </LinearLayout>

</LinearLayout>